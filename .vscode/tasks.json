{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build-Debug-Server",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "build",
                "Server/Server.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build-Debug-Scripts",
            "command": "dotnet",
            "type": "shell",
            "group": "build",
            "args": [
                "build",
                "Scripts/Scripts.csproj"
            ],
            "problemMatcher": "$msCompile"
        },
        {
            "label": "Build-CorexUO",
            "command": "dotnet",
            "type": "process",
            "group": "build",
            "args": [
                "build",
                "Application/CorexUO.csproj"
            ],
            "dependsOn": ["Build-Debug-Scripts"],
            "problemMatcher": "$msCompile"
        }
    ]
}
